# Alias file for both Bash & ZSH

# use Windows Vagrant for Trellis
alias vagrant="vagrant.exe"

# Vim to Neovim
alias vi="nvim"
alias vim="nvim"

# ls aliases
alias ls="exa --header -l"
alias l="exa --header -l"
alias ll="exa --header -l"
alias la="exa --header -la"

# Reload ZSH config
alias reload="source $HOME/.zshrc"

# Github Aliases
alias gs="git status"
alias gaa="git add ."
alias gc="git commit"
alias gcm="git commit -m"
alias gp="git push"

# Android Development settings
alias adb="adb.exe"
alias emulator="emulator.exe"
