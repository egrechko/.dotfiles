# Alias file for both Bash & ZSH

# use Windows Vagrant for Trellis (uncomment in WSL)
#alias vagrant="vagrant.exe"

# Vim to Neovim
alias vi="nvim"
alias vim="nvim"

# ls aliases
alias ls="exa --header -l"
alias l="exa --header -l"
alias ll="exa --header -l"
alias la="exa --header -la"

# Reload ZSH config
alias reload="source $HOME/.zshrc"

# Github Aliases
alias gs="git status"
alias gaa="git add ."
alias gc="git commit"
alias gcm="git commit -m"
alias gp="git push"

# Tmux Aliases
alias t="tmux"
alias ta="t a -t"
alias tls="t ls"
alias tn="t new -t"

